# Database - utiliser SQLite pour les tests locaux
DATABASE_URL="file:./dev.db"
# DATABASE_URL="postgresql://pme360:pme360@localhost:5432/pme360_dev"

# JWT
JWT_SECRET="pme360-super-secret-jwt-key-for-development"
JWT_REFRESH_SECRET="pme360-super-secret-refresh-key-for-development"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
NODE_ENV="development"
PORT=3000
API_PREFIX="/api/v1"

# CORS
FRONTEND_URL="http://localhost:3002"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# File Upload (Cloudinary) - Demo values
CLOUDINARY_CLOUD_NAME="demo-cloud"
CLOUDINARY_API_KEY="demo-api-key"
CLOUDINARY_API_SECRET="demo-api-secret"

# Email (SendGrid or similar)
SENDGRID_API_KEY="demo-sendgrid-key"
FROM_EMAIL="noreply@pme360.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="debug"

# Admin
ADMIN_EMAIL="admin@pme360.com"